extends ../../layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2= title

        // register form
        form(method='POST' action='./register')
          div.form-row
            div.col
                label(for='firstname') First Name :
                input#name.form-control(type='text', placeholder='First Name' name='firstname')
            div.col
                label(for="lastname") Last Name :
                input#lastname.form-control(type='text', placeholder='Last Name', name='lastname')
            div.col
                label(for="username") Username :
                input#username.form-control(type='text', placeholder='Username', name='username')
          div.form-row
            div.col-md-8
                label(for='email') Email :
                input#email.form-control(type='email', placeholder='name@email.com' name='email')
            div.col
                label(for='phonenumber') Phone Number :
                input#phonenumber.form-control(type='text', placeholder='(555) 555-5555' name='phonenumber')
          div.form-row
            div.col-md-9
                label(for='address') Address :
                input#address.form-control(type='text', placeholder='132 S. Main St.' name='address')
            div.col
                label(for='aptsuite') Apt/Suite :
                input#aptsuite.form-control(type='text', placeholder='APT 5555' name='aptsuite')
          div.form-row
            div.col-md-7
                label(for='city') City :
                input#city.form-control(type='text', placeholder='Metropolis' name='city')
            div.col-md-2
                label(for='state') State :
                input#state.form-control(type='text', placeholder='AK' name='state')
            div.col-md-3
                label(for='zip') Zip :
                input#zip.form-control(type="text", placeholder="88888" name="zip")
          div.form-row        
            div.col
                label(for='password') Password :
                input#password.form-control(type='password', placeholder='Password' name='password')
            div.col
                label(for="passwordconfirm") Confirm Password :
                input#passwordconfirm.form-control(type='password', placeholder='Confirm Password', name='passwordconfirm')
          br
          button.btn.btn-primary(type='submit') Sign up